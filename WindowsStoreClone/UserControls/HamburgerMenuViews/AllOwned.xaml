<UserControl x:Class="WindowsStoreClone.UserControls.HamburgerMenuViews.AllOwned"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsStoreClone.UserControls.HamburgerMenuViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer Name="MainScrollViewer" HorizontalScrollBarVisibility="Hidden"
                  >
        <StackPanel>
            <local:HamburgerManuHeader x:Name="HamHeder"></local:HamburgerManuHeader>
            <local:HamburgerManuAppList x:Name="HamAppsList"></local:HamburgerManuAppList>
        </StackPanel>
    </ScrollViewer>
</UserControl>
