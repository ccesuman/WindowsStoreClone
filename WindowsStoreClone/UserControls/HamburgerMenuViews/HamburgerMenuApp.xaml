<UserControl x:Class="WindowsStoreClone.UserControls.HamburgerMenuViews.HamburgerMenuApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsStoreClone.UserControls.HamburgerMenuViews"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"></ColumnDefinition>
            <ColumnDefinition Width="0.45*"></ColumnDefinition>
            <ColumnDefinition Width="0.40*"></ColumnDefinition>
            <ColumnDefinition Width="0.10*"></ColumnDefinition>
            <ColumnDefinition Width="0.05*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Name="AppImage"
               Grid.Row="0" Grid.Column="0"
               Source="/Images/MiniIcons/BubbleWitch.png" 
               Margin="4"
               />
        <Label Name="AppNameLabel"
               Grid.Row="0" Grid.Column="1"
               VerticalAlignment="Center"
               HorizontalContentAlignment="Left"
               Content="BubbleWitch"
               FontSize="20"
               Margin="4"
               />
        <Label Name="PucrhasedLabel"
               Grid.Row="0" Grid.Column="2"
               VerticalAlignment="Center"
               Content="Purchased Today"
               Margin="4"
               />
        <Button 
            Grid.Row="0"
            Grid.Column="3"
            VerticalAlignment="Center"
            Content="Install"
            Margin="4"
            />
        <Button 
            Grid.Row="0"
            Grid.Column="4"
            VerticalAlignment="Center"
            Content="..."
            Margin="4"
            />

    </Grid>
</UserControl>
